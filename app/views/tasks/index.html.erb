<h1>All my tasks</h1>
<% @tasks.each do |task| %>
  <div>
  <% if task.completed %>
    <input type="checkbox" checked="true">
  <% else %>
    <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to task_path(task), method: :delete do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
  </div>
<% end %>
<hr>
<%= link_to '+ Add a task', new_task_path %>
